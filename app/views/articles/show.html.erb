<h1><%= @article.title %></h1>

<h3><%= @article.text%></h3><br/>
<h3>Comments:</h3>
<% @article.comments.each do |comment|%>
<p>
    <i><%= comment.username %></i> :
    <%= comment.body %>
</p>
<% end %>


<%= form_for([@article, @article.comments.build])do |f| %>

<p>
    <%= f.label :text %></br>
    <%= f.text_area :body %>
</p>
<p>
    <%= f.submit %>
</p>



<% end %>